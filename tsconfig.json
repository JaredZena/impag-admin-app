{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "ESNext"],
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "types": ["node", "vitest/globals"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules/@testing-library/jest-dom/types"]
}